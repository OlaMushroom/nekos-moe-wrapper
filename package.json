{
  "name": "nekos-moe",
  "version": "0.6.3",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/OlaMushroom/nekos-moe-wrapper.git"
  },
  "type": "module",
  "module": "./lib/index.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "src",
    "lib",
    "bin"
  ],
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./lib/index.js",
      "default": "./lib/index.js"
    },
    "./types": "./src/types.ts"
  },
  "bin": {
    "nekos": "./bin/cli.js"
  },
  "scripts": {
    "build": "bun ./tools/build.js && tsc --outDir lib",
    "bin": "bun build ./bin/cli.js --minify --sourcemap --compile",
    "compile": "bun run bin --outfile nekos",
    "compile:linux": "bun run bin --target=bun-linux-x64 --outfile ./dist/nekos-linux",
    "compile:win": "bun run bin --target=bun-windows-x64 --outfile ./dist/nekos-win",
    "dist": "concurrently -g \"npm:compile:*\" && bun ./tools/compress.ts",
    "publish": "bun run build && bun run dist"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/archiver": "^6.0.2",
    "@types/bun": "^1.1.6",
    "archiver": "^7.0.1",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.5.3"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}